rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ✅ Allow everyone to read songs; allow dev writes until 2100
    match /songs/{songId} {
      allow read: if true;
      allow write: if request.time < timestamp.date(2100, 1, 1);  // TEMPORARY dev write access
    }

    // ✅ Allow read-only access to config
    match /config/{docId} {
      allow read: if true;
    }

    // ✅ Albums: everyone can read; dev writes until 2100
    match /albums/{albumId} {
      allow read: if true;
      allow write: if request.time < timestamp.date(2100, 1, 1);  // TEMPORARY dev write access
    }
  }
}
